# Caddyfile configuration for year-grid-calendar service
# Add this to your existing Caddy configuration or include it

year-grid.your-domain.com {
    # Reverse proxy to the calendar web service
    reverse_proxy year-grid-calendar:8000

    # Enable compression
    encode gzip zstd

    # Optional: Add rate limiting to prevent abuse
    # Uncomment if you have the rate_limit plugin
    # rate_limit {
    #     zone year_grid_zone {
    #         key {remote_host}
    #         events 20
    #         window 1m
    #     }
    # }

    # Security headers
    header {
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # XSS protection
        X-Content-Type-Options "nosniff"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Access logging (optional)
    log {
        output file /var/log/caddy/year-grid-calendar.log
        format json
    }
}
